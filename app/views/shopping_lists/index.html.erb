<section class='shoppingList'>
  <%= render partial: 'shopping_lists/navigation' %>
  <div>
    <h2>Shopping List</h2>
    <div>
      <h4>Amount of food items to buy: <%= @total_foods %></h4>
      <h4>Total value of food needed: $<%= @total_price %></h4>
    </div>
    <div >
      <table>
        <thead>
          <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @recipe_foods.each do |recipe_food| %>
            <tr>
              <td><%= recipe_food[:food].name %></td>
              <td><%= recipe_food[:quantity] %> <%= recipe_food[:food].measurement_unit %></td>
              <td>$<%= recipe_food[:price] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
