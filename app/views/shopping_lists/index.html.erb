<section class='shoppingList'>
  <div>
    <h2 class=' mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400'>Shopping List</h2>
    <div>
      <h4 class = "text-xl font-medium text-gray-900 dark:text-black">Amount of food items to buy: <%= @total_foods %></h4>
      <h4 class = "text-xl font-medium text-gray-900 dark:text-black">Total value of food needed: $<%= @total_price %></h4>
    </div>
   <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-8">

     <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
         <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">Food</th>
            <th scope="col" class="px-6 py-3">Quantity</th>
            <th scope="col" class="px-6 py-3">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @recipe_foods.each do |recipe_food| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <td class="px-6 py-4"><%= recipe_food[:food].name %></td>
              <td class="px-6 py-4"><%= recipe_food[:quantity] %> <%= recipe_food[:food].measurement_unit %></td>
              <td class="px-6 py-4">$<%= recipe_food[:price] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</section>